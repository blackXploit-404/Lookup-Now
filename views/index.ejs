  <script>
    const historyList = JSON.parse(localStorage.getItem('searchHistory')) || [];

    function showError(message) {
      $("#error-message").text(message).removeClass("hidden");
    }

    function hideError() {
      $("#error-message").addClass("hidden");
    }

    function updateHistory() {
      $("#history-list").empty();
      historyList.forEach((entry, index) => {
        $("#history-list").append(`<li>${entry} <button class="remove-history-btn" data-index="${index}">Remove</button></li>`);
      });
      $("#history-area").toggle(historyList.length > 0);
      localStorage.setItem('searchHistory', JSON.stringify(historyList));
    }

    async function fetchWhois(domain) {
      try {
        showLoader();
        const response = await $.get(`/whois?domain=${domain}`);
        $("#res-whois-json").text(JSON.stringify(response, null, 2));
        $("#whois-area").show();
        $("#result-area").hide();
      } catch (error) {
        alert('Error fetching WHOIS data');
        $("#whois-area").hide();
      } finally {
        hideLoader();
      }
    }

