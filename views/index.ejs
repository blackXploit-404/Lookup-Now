        $("#hosting-image").html(`<img src="${hostingImage}" alt="${hostingProvider} Logo" style="max-width: 100%; height: auto;">`);

        $("#res-i-ip").text(data.ip);
        $("#res-i-iptype").text(data.type);
        $("#res-i-isp").text(data.isp);
        $("#res-i-city").text(data.city);
        $("#res-i-region").text(data.region);
        $("#res-i-country").text(data.country);
        $("#res-i-longitude").text(data.longitude);
        $("#res-i-latitude").text(data.latitude);

        $("#result-area").show();
        $("#whois-area").hide();
        updateHistory(); // Update the search history
      } catch (error) {
        alert('Error fetching hosting data');
        $("#result-area").hide();
      } finally {
        hideLoader();
      }
    }

    function showLoader() {
      $("#loader").show();
    }

    function hideLoader() {
      $("#loader").hide();
    }

    $(document).ready(function () {

      updateHistory();

      $("#domain_lookup_btn").click(async function () {
        const domain = $("#domain_input").val().trim();
        if (!domain) {
          showError("Please enter a domain name.");
          return;
        }
        hideError();
        fetchWhois(domain);
      });

      $("#hosting_lookup_btn").click(async function () {
        const domain = $("#domain_input").val().trim();
        if (!domain) {
          showError("Please enter a domain name.");
          return;
        }
        hideError();
        if (!historyList.includes(domain)) {
          historyList.push(domain);
          updateHistory();
        }
        hostingLookup(domain);
      });

      $(document).on("click", ".remove-history-btn", function () {
        const index = $(this).data("index");
        historyList.splice(index, 1);
        updateHistory();
      });

      // Clipboard functionality for WHOIS Info
      $("#share-whois-btn").click(function () {
        const whoisData = $("#res-whois-json").text();
        navigator.clipboard.writeText(whoisData)
          .then(() => {
            alert('WHOIS info copied to clipboard!');
          })
          .catch(err => {
            alert('Failed to copy WHOIS info.');
          });
      });

      // Clipboard functionality for Hosting Info
      $("#share-hosting-btn").click(function () {
        const hostingInfo = `
          Domain: ${$("#hosting-message").text()}
          IP: ${$("#res-i-ip").text()}
          IP Type: ${$("#res-i-iptype").text()}
          ISP: ${$("#res-i-isp").text()}
          City: ${$("#res-i-city").text()}
          Region: ${$("#res-i-region").text()}
          Country: ${$("#res-i-country").text()}
          Longitude: ${$("#res-i-longitude").text()}
          Latitude: ${$("#res-i-latitude").text()}
        `;
        navigator.clipboard.writeText(hostingInfo)
          .then(() => {
            alert('Hosting info copied to clipboard!');
          })
          .catch(err => {
            alert('Failed to copy hosting info.');
          });
      });

    });
  </script>
