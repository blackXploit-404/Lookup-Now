<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Domain and Hosting Lookup</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #000000;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: auto;
      padding: 20px;
      background: rgb(0, 0, 0);  
    }
    h1 {
      text-align: center;
      color: #ffffff;
      animation: fadeIn 0.5s;

    }
    h2 {
      text-align: center;
      color: #ffffff;
      animation: fadeIn 0.5s;
    }
    form {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
      animation: slideIn 0.5s;
    }
    input[type="text"] {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      width: 70%;
      margin-right: 10px;
      transition: border-color 0.3s;
    }
    input[type="text"]:focus {
      border-color: #28a745;
    }
    button {
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      background-color: #28a745;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.3s;
      margin-left: 10px;
    }
    button:hover {
      background-color: #218838;
      transform: scale(1.05);
    }
    #result-area, #whois-area {
      margin-top: 20px;
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 5px;
      background-color: #f9f9f9;
      animation: fadeIn 0.5s;
    }
    #res-i-map {
      margin-top: 15px;
    }
    footer {
      text-align: center;
      margin-top: 20px;
      font-size: 0.9em;
      color: #666;
    }
    img {
      margin-top: 10px;
      border-radius: 5px;
    }
    .loader {
      display: none;
      border: 4px solid #f3f3f3; /* Light grey */
      border-top: 4px solid #3498db; /* Blue */
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Lookup Now üîç</h1>
    <h2>Explore Domains, Discover Hosting‚ÄîAll in One Click! üöÄ</h2>
    <form id="lookup-form">
      <input type="text" id="domain_input" placeholder="Enter domain name..." required>
      <button type="button" id="domain_lookup_btn">Domain Lookup</button>
      <button type="button" id="hosting_lookup_btn">Hosting Lookup</button>
    </form>

    <div class="loader" id="loader"></div>

    <div id="whois-area" style="display: none;">
      <h3>WHOIS Information üìÑ</h3>
      <pre id="res-whois-json" style="white-space: pre-wrap;"></pre>
      <div style="text-align: center; margin-top: 10px;">
        <p style="color: #666;">Powered by WHOIS</p>
        <img src="https://www.whois.com/images/logo.svg" alt="WHOIS Logo" style="height: 30px; margin-top: 5px;">
      </div>
    </div>

    <div id="result-area" style="display: none;">
      <h3 id="hosting-message"></h3>
      <div id="hosting-image"></div>
      <p><strong>IP:</strong> <span id="res-i-ip"></span></p>
      <p><strong>IP Type:</strong> <span id="res-i-iptype"></span></p>
      <p><strong>ISP:</strong> <span id="res-i-isp"></span></p>
      <p><strong>City:</strong> <span id="res-i-city"></span></p>
      <p><strong>Region:</strong> <span id="res-i-region"></span></p>
      <p><strong>Country:</strong> <span id="res-i-country"></span></p>
      <p><strong>Longitude:</strong> <span id="res-i-longitude"></span></p>
      <p><strong>Latitude:</strong> <span id="res-i-latitude"></span></p>
      <div id="res-i-map"></div>
    </div>

    <footer>
      <p>&copy; 2024 Domain and Hosting Lookup Tool. All rights reserved.</p>
    </footer>
  </div>

  <script>
    $("#domain_lookup_btn").click(function() {
      const domain = $("#domain_input").val();
      fetch_whois(domain);
    });

    $("#hosting_lookup_btn").click(function() {
      const domain = $("#domain_input").val();
      hosting_lookup(domain);
    });

    function showLoader() {
      $("#loader").show();
      $("#result-area").hide();
      $("#whois-area").hide();
    }

    function hideLoader() {
      $("#loader").hide();
    }

    function fetch_whois(domain) {
      showLoader();
      $.get(`/whois?domain=${domain}`, function(data) {
        hideLoader();
        $("#res-whois-json").text(JSON.stringify(data, null, 2));
        $("#whois-area").show();
      }).fail(function() {
        hideLoader();
        alert('Error fetching WHOIS data');
        $("#whois-area").hide();
      });
    }

    function hosting_lookup(domain) {
      showLoader();
      $.ajax({
        type: "GET",
        url: `https://ipwhois.app/json/${domain}`,
        success: function(data) {
          hideLoader();
          const hostingProvider = data.isp || 'N/A';
          $("#hosting-message").text(`${domain} is hosted on ${hostingProvider} üéâ`);

          const hostingImageMap = {
            "Google LLC": "https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg",
            "Amazon.com": "https://upload.wikimedia.org/wikipedia/commons/a/a9/Amazon_logo.svg",
            "Cloudflare": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Cloudflare_Logo.svg",
            "HostGator": "https://upload.wikimedia.org/wikipedia/commons/6/6b/HostGator_logo.svg",
            "GoDaddy": "https://upload.wikimedia.org/wikipedia/commons/1/1c/GoDaddy_logo.svg",
            "Bluehost": "https://upload.wikimedia.org/wikipedia/commons/1/1c/Bluehost_logo.svg",
            "SiteGround": "https://upload.wikimedia.org/wikipedia/commons/1/1c/SiteGround_logo.svg",
            "DreamHost": "https://upload.wikimedia.org/wikipedia/commons/1/1c/DreamHost_logo.svg",
            "InMotion Hosting": "https://upload.wikimedia.org/wikipedia/commons/1/1c/InMotion_Hosting_logo.svg",
            "A2 Hosting": "https://upload.wikimedia.org/wikipedia/commons/1/1c/A2_Hosting_logo.svg",
            "Hostinger": "https://upload.wikimedia.org/wikipedia/commons/1/1c/Hostinger_logo.svg",
            "iPage": "https://upload.wikimedia.org/wikipedia/commons/1/1c/iPage_logo.svg",
            "HostPapa": "https://upload.wikimedia.org/wikipedia/commons/1/1c/HostPapa_logo.svg",
            "GreenGeeks": "https://upload.wikimedia.org/wikipedia/commons/1/1c/GreenGeeks_logo.svg",
            "Kinsta": "https://upload.wikimedia.org/wikipedia/commons/1/1c/Kinsta_logo.svg",
            "WP Engine": "https://upload.wikimedia.org/wikipedia/commons/1/1c/WP_Engine_logo.svg",
            "Liquid Web": "https://upload.wikimedia.org/wikipedia/commons/1/1c/Liquid_Web_logo.svg",
            "Namecheap": "https://upload.wikimedia.org/wikipedia/commons/1/1c/Namecheap_logo.svg",
          };
          const hostingImage = hostingImageMap[hostingProvider] || "https://via.placeholder.com/150";
          $("#hosting-image").html(`<img src="${hostingImage}" alt="${hostingProvider} logo" height="50">`);

          $("#res-i-ip").text(data.ip || 'N/A');
          $("#res-i-iptype").text(data.type || 'N/A');
          $("#res-i-isp").text(data.isp || 'N/A');
          $("#res-i-city").text(data.city || 'N/A');
          $("#res-i-region").text(data.region || 'N/A');
          $("#res-i-country").html(`<img src="${data.country_flag}" height="12px">&nbsp;&nbsp;${data.country}`);
          $("#res-i-longitude").text(data.longitude || 'N/A');
          $("#res-i-latitude").text(data.latitude || 'N/A');

          $("#res-i-map").html(`<iframe src="https://maps.google.com/maps?q=${data.latitude},${data.longitude}&hl=es;z=14&amp;output=embed" class="w-100" style="height: 210px; border: 1px solid #ccc; border-radius: 7px;"></iframe>`);

          $("#result-area").show();
        },
        error: function() {
          hideLoader();
          alert('Error fetching Hosting data');
        }
      });
    }
  </script>
</body>
</html>
