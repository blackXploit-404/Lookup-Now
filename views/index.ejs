  <style>
    body {
      font-family: consolas, monospace;
      background-color: #ffffff;
      margin: 0;
      padding: 20px;
      color: rgb(255, 255, 255);
    }

    .container {
      max-width: 800px;
      margin: auto;
      padding: 20px;
      background: #ffffff;
      border-radius: 10px;
    }

    h1, h2 {
      text-align: center;
      color: #000000;
      animation: fadeIn 0.5s;
    }

    form {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
      animation: slideIn 0.5s;
    }

    input[type="text"] {
      padding: 12px;
      border: 1px solid #000000;
      border-radius: 5px;
      width: 70%;
      margin-right: 10px;
      transition: border-color 0.3s;
      background-color: #ffffff;
      color: rgb(0, 0, 0);
    }

    input[type="text"]:focus {
      border-color: #000000;
      outline: none;
    }

    button {
      padding: 12px 20px;
      border: none;
      border-radius: 5px;
      background-color: #28a745;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.3s;
      margin-left: 10px;
    }

    button:hover {
      background-color: #218838;
      transform: scale(1.05);
    }

    #result-area, #whois-area, #history-area {
      margin-top: 20px;
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 5px;
      background-color: #f9f9f9;
      color: black;
      animation: fadeIn 0.5s;
    }

    footer {
      text-align: center;
      margin-top: 20px;
      font-size: 0.9em;
      color: #666;
    }

    .loader {
      display: none;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: auto;
    }

    .error-message {
      color: #ff6b6b;
      margin-top: 10px;
      text-align: center;
      font-weight: bold;
    }

    .hidden {
      display: none;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Lookup Now üîç</h1>
    <h2>Explore Domains, Discover Hosting‚ÄîAll in One Click! üöÄ</h2>
    <form id="lookup-form">
      <input type="text" id="domain_input" placeholder="Enter domain name..." required>
      <button type="button" id="domain_lookup_btn">Domain Lookup</button>
      <button type="button" id="hosting_lookup_btn">Hosting Lookup</button>
    </form>
    <p id="error-message" class="error-message hidden">Please enter a domain name.</p>

    <div class="loader" id="loader"></div>

    <div id="whois-area" style="display: none;">
      <h3>WHOIS Information üìÑ</h3>
      <pre id="res-whois-json" style="white-space: pre-wrap;"></pre>
      <div style="text-align: center; margin-top: 10px;">
        <p style="color: #666;">Powered by WHOIS</p>
        <img src="https://www.whois.com/images/logo.svg" alt="WHOIS Logo" style="height: 30px; margin-top: 5px;">
      </div>
    </div>

    <div id="result-area" style="display: none;">
      <h3 id="hosting-message"></h3>
      <div id="hosting-image"></div>
      <p><strong>IP:</strong> <span id="res-i-ip"></span></p>
      <p><strong>IP Type:</strong> <span id="res-i-iptype"></span></p>
      <p><strong>ISP:</strong> <span id="res-i-isp"></span></p>
      <p><strong>City:</strong> <span id="res-i-city"></span></p>
      <p><strong>Region:</strong> <span id="res-i-region"></span></p>
      <p><strong>Country:</strong> <span id="res-i-country"></span></p>
      <p><strong>Longitude:</strong> <span id="res-i-longitude"></span></p>
      <p><strong>Latitude:</strong> <span id="res-i-latitude"></span></p>
      <div id="res-i-map"></div>
    </div>

    <div id="history-area" style="display: none;">
      <h3>Search History üïí</h3>
      <ul id="history-list"></ul>
    </div>

    <footer>
      <p>&copy; 2024 Lookup-Now üöÄ. All rights reserved.</p>
      <p>A Devsecure Innovations Product</p>
      <p><button><a href="https://github.com/blackXploit-404/Lookup-Now">Check On GitHub ‚≠ê</a></button></p>
    </footer>
  </div>

  <script>
    function showError(message) {
      $("#error-message").text(message).removeClass("hidden");
    }

    function hideError() {
      $("#error-message").addClass("hidden");
    }

    async function fetchWhois(domain) {
      try {
        showLoader();
        const response = await $.get(`/whois?domain=${domain}`);
        $("#res-whois-json").text(JSON.stringify(response, null, 2));
        $("#whois-area").show();
      } catch (error) {
        alert('Error fetching WHOIS data');
        $("#whois-area").hide();
      } finally {
        hideLoader();
      }
    }

    async function hostingLookup(domain) {
      try {
        showLoader();
        const data = await $.get(`https://ipwhois.app/json/${domain}`);
        const hostingProvider = data.isp || 'N/A';
        $("#hosting-message").text(`${domain} is hosted on ${hostingProvider} üéâ`);

        const hostingImageMap = {
          "Google LLC": "https://www.google.com/images/branding/googlelogo/2x/googlelogo_color_92x30dp.png",
          "Microsoft Corporation": "https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg",
          "Amazon.com, Inc.": "https://upload.wikimedia.org/wikipedia/commons/6/62/Amazon.com-Logo.svg",
          "Cloudflare, Inc.": "https://www.cloudflare.com/img/logo-cloudflare-dark.svg",
          "DigitalOcean, LLC": "https://www.digitalocean.com/assets/media/logos-badges/DO_Logo_horizontal_blue.svg",
          "OVH SAS": "https://www.ovh.com/fr/images/logos/ovh-logo.png",
          "GoDaddy.com, LLC": "https://upload.wikimedia.org/wikipedia/commons/1/1a/GoDaddy_logo.png",
          "Shopify, Inc.": "https://upload.wikimedia.org/wikipedia/commons/0/0c/Shopify_logo_2018.svg",
          "Squarespace, Inc.": "https://upload.wikimedia.org/wikipedia/commons/1/1d/Squarespace-logo.png",
          "Wix.com Ltd.": "https://upload.wikimedia.org/wikipedia/commons/7/7e/Wix.com_website_logo.png",
          "Automattic, Inc.": "https://upload.wikimedia.org/wikipedia/commons/9/91/Automattic_logo.png",
          "Namecheap, Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4e/Namecheap_logo.png",
          "HostGator.com LLC": "https://upload.wikimedia.org/wikipedia/commons/6/6e/HostGator_logo.png",
          "Bluehost Inc.": "https://upload.wikimedia.org/wikipedia/commons/9/9e/Bluehost_logo.png",
          "DreamHost, LLC": "https://upload.wikimedia.org/wikipedia/commons/7/7e/DreamHost_logo.png",
          "InMotion Hosting, Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/InMotion_Hosting_logo.png",
          "SiteGround Hosting Ltd.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/SiteGround_logo.png",
          "A2 Hosting, Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/A2_Hosting_logo.png",
          "Kinsta Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Kinsta_logo.png",
          "Liquid Web, L.L.C": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Liquid_Web_logo.png",
          "Hostinger International Ltd.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostinger_logo.png",
          "IONOS by 1&1": "https://upload.wikimedia.org/wikipedia/commons/4/4b/IONOS_logo.png",
          "HostPapa Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/HostPapa_logo.png",
          "GreenGeeks LLC": "https://upload.wikimedia.org/wikipedia/commons/4/4b/GreenGeeks_logo.png",
          "Scala Hosting LLC": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Scala_Hosting_logo.png",
          "TMDHosting LLC": "https://upload.wikimedia.org/wikipedia/commons/4/4b/TMDHosting_logo.png",
          "InterNetX GmbH": "https://upload.wikimedia.org/wikipedia/commons/4/4b/InterNetX_logo.png",
          "FastComet Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/FastComet_logo.png",
          "Hostwinds LLC": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostwinds_logo.png",
          "MilesWeb Internet Services Pvt Ltd": "https://upload.wikimedia.org/wikipedia/commons/4/4b/MilesWeb_logo.png",
          "Contabo GmbH": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Contabo_logo.png",
          "Hostens UAB": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostens_logo.png",
          "HostArmada LLC": "https://upload.wikimedia.org/wikipedia/commons/4/4b/HostArmada_logo.png",
          "Hostiso Ltd.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostiso_logo.png",
          "HostUpon Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/HostUpon_logo.png",
          "Hostiso Ltd.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostiso_logo.png",
          "HostUpon Inc.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/HostUpon_logo.png",
          "Hostiso Ltd.": "https://upload.wikimedia.org/wikipedia/commons/4/4b/Hostiso_logo.png",
          
        };

        const hostingImage = hostingImageMap[hostingProvider] || 'https://via.placeholder.com/150';
        $("#hosting-image").html(`<img src="${hostingImage}" style="width: 150px;">`);

        $("#res-i-ip").text(data.ip || 'N/A');
        $("#res-i-iptype").text(data.type || 'N/A');
        $("#res-i-isp").text(data.isp || 'N/A');
        $("#res-i-city").text(data.city || 'N/A');
        $("#res-i-region").text(data.region || 'N/A');
        $("#res-i-country").text(data.country || 'N/A');
        $("#res-i-longitude").text(data.longitude || 'N/A');
        $("#res-i-latitude").text(data.latitude || 'N/A');
        $("#result-area").show();

        // Save to history
        saveToHistory(domain);
      } catch (error) {
        alert('Error fetching hosting data');
        $("#result-area").hide();
      } finally {
        hideLoader();
      }
    }

    function saveToHistory(domain) {
      let history = JSON.parse(localStorage.getItem('searchHistory')) || [];
      if (!history.includes(domain)) {
        history.push(domain);
        localStorage.setItem('searchHistory', JSON.stringify(history));
        displayHistory();
      }
    }

    function displayHistory() {
      const history = JSON.parse(localStorage.getItem('searchHistory')) || [];
      $("#history-list").empty();
      if (history.length > 0) {
        history.forEach(domain => {
          $("#history-list").append(`<li>${domain}</li>`);
        });
        $("#history-area").show();
      } else {
        $("#history-area").hide();
      }
    }

    function showLoader() {
      $("#loader").show();
    }

    function hideLoader() {
      $("#loader").hide();
    }

    $(document).ready(function() {
      displayHistory(); // Show history on page load

      $("#domain_lookup_btn").click(function() {
        const domain = $("#domain_input").val();
        if (!domain) {
          showError("Please enter a domain name.");
        } else {
          hideError();
          fetchWhois(domain);
        }
      });

      $("#hosting_lookup_btn").click(function() {
        const domain = $("#domain_input").val();
        if (!domain) {
          showError("Please enter a domain name.");
        } else {
          hideError();
          hostingLookup(domain);
        }
      });
    });
  </script>
</body>

